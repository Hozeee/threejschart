root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

[*.{js,css,scss,html,json,haml}]
indent_style = tab
indent_size = 4
tab_width = 4
trim_trailing_whitespace = true
continuation_indent_size = 4

[*.js]
max_line_length = 80
quote_type = single
curly_bracket_next_line = false
spaces_around_operators = true